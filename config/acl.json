[
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "auth/signup",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "auth/signin",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "auth/token",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "search",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "recommend",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "auth/*",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "objects/*",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "users/me",
        "methods": ["PATCH"],
        "action": "allow"
      },
      {
        "resource": "playlists/*",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "movies/:movieId",
        "methods": ["GET"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "administrator",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  }
]
