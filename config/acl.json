[
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "search",
        "methods": [
          "GET"
        ],
        "action": "allow"
      },
      {
        "resource": "auth/signup",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "auth/signin",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "auth/token",
        "methods": "*",
        "action": "allow"
      },   
      {
        "resource": "playlist/:playlistId/movies/:movieId",
        "methods": ["DESTROY"],
        "action": "allow"
      },
      {
        "resource": "movies",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "auth/*",
        "methods": "*",
        "action": "allow"
      },
      {
        "resource": "objects/*",
        "methods": [
          "GET"
        ],
        "action": "allow"
      },
      {
        "resource": "users/me",
        "methods": ["PATCH"],
        "action": "allow"
      },
      {
        "resource": "playlists/*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "administrator",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  }
]